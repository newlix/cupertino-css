{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Sidebar" %}

{% block content %}

  {% call example("Default") %}
<div class="sidebar" style="position:relative; height:400px; border-radius:12px;">
  <div class="sidebar-header">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-primary">
      <rect width="24" height="24" rx="6" fill="currentColor" opacity="0.12"/>
      <rect x="3" y="3" width="18" height="18" rx="4" stroke="currentColor" stroke-width="1.5"/>
      <circle cx="12" cy="12" r="4" fill="currentColor"/>
    </svg>
    <h2>My App</h2>
  </div>
  <div class="sidebar-content">
    <div class="sidebar-section">
      <h3>General</h3>
      <a class="sidebar-item" data-active>
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        Home
      </a>
      <a class="sidebar-item">
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
        Messages
        <span class="ml-auto inline-flex size-5 items-center justify-center rounded-full bg-primary text-[10px] font-semibold text-primary-foreground">5</span>
      </a>
      <a class="sidebar-item">
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/></svg>
        Notifications
        <span class="ml-auto inline-flex size-5 items-center justify-center rounded-full bg-destructive text-[10px] font-semibold text-white">3</span>
      </a>
    </div>
    <div class="sidebar-section">
      <h3>Settings</h3>
      <a class="sidebar-item">
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        Profile
      </a>
      <a class="sidebar-item">
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="3"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
        Preferences
      </a>
    </div>
  </div>
  <div class="sidebar-footer">
    <div class="flex items-center gap-2.5 text-sm text-muted-foreground">
      <img src="https://i.pravatar.cc/32?img=12" alt="Avatar" class="size-7 rounded-full">
      <span class="font-medium text-foreground">Sarah Chen</span>
    </div>
  </div>
</div>
{% endcall %}

  {% call example("Collapsible Sections") %}
<div class="sidebar" style="position:relative; height:420px; border-radius:12px;">
  <div class="sidebar-header">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-primary">
      <rect width="24" height="24" rx="6" fill="currentColor" opacity="0.12"/>
      <rect x="3" y="3" width="18" height="18" rx="4" stroke="currentColor" stroke-width="1.5"/>
      <circle cx="12" cy="12" r="4" fill="currentColor"/>
    </svg>
    <h2>Workspace</h2>
  </div>
  <div class="sidebar-content">
    <div class="sidebar-section">
      <h3>Platform</h3>
      <a class="sidebar-item" data-active>
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        Dashboard
      </a>
      <details class="group" open>
        <summary class="sidebar-item cursor-pointer list-none">
          <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="3"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
          Settings
          <svg class="ml-auto size-4 shrink-0 text-muted-foreground transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/></svg>
        </summary>
        <div class="ml-6 mt-1 space-y-0.5">
          <a class="sidebar-item text-sm">General</a>
          <a class="sidebar-item text-sm">Billing</a>
          <a class="sidebar-item text-sm">Team Members</a>
          <a class="sidebar-item text-sm">Integrations</a>
        </div>
      </details>
      <details class="group">
        <summary class="sidebar-item cursor-pointer list-none">
          <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
          Build
          <svg class="ml-auto size-4 shrink-0 text-muted-foreground transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/></svg>
        </summary>
        <div class="ml-6 mt-1 space-y-0.5">
          <a class="sidebar-item text-sm">Deployments</a>
          <a class="sidebar-item text-sm">Logs</a>
          <a class="sidebar-item text-sm">Environment</a>
        </div>
      </details>
    </div>
  </div>
  <div class="sidebar-footer">
    <div class="flex items-center gap-2.5 text-sm text-muted-foreground">
      <img src="https://i.pravatar.cc/32?img=3" alt="Avatar" class="size-7 rounded-full">
      <span class="font-medium text-foreground">Emma Wilson</span>
    </div>
  </div>
</div>
{% endcall %}

  {% call example("With Search") %}
<div class="sidebar" style="position:relative; height:400px; border-radius:12px;">
  <div class="sidebar-header">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="text-primary">
      <rect width="24" height="24" rx="6" fill="currentColor" opacity="0.12"/>
      <rect x="3" y="3" width="18" height="18" rx="4" stroke="currentColor" stroke-width="1.5"/>
      <circle cx="12" cy="12" r="4" fill="currentColor"/>
    </svg>
    <h2>Docs</h2>
  </div>
  <div class="sidebar-content">
    <div class="px-3 pb-2">
      <div class="flex items-center gap-2 rounded-lg border bg-card px-3 py-1.5 text-sm text-muted-foreground">
        <svg class="size-4 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
        <span>Search docs...</span>
        <kbd class="kbd ml-auto text-[10px]">&#8984;K</kbd>
      </div>
    </div>
    <div class="sidebar-section">
      <h3>Getting Started</h3>
      <a class="sidebar-item" data-active>
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
        Introduction
      </a>
      <a class="sidebar-item">
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>
        Installation
      </a>
      <a class="sidebar-item">
        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 20h9"/><path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"/></svg>
        Changelog
      </a>
    </div>
    <div class="sidebar-section">
      <h3>Components</h3>
      <a class="sidebar-item">Button</a>
      <a class="sidebar-item">Card</a>
      <a class="sidebar-item">Dialog</a>
      <a class="sidebar-item">Input</a>
    </div>
  </div>
</div>
{% endcall %}

{% endblock %}
