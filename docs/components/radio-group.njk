{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Radio Group" %}
{% set description = "Single-choice selection." %}

{% block content %}

  {% call example("Default") %}
<div class="cider">
  <fieldset class="space-y-2.5">
    <legend>Notification preference</legend>
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="notification" value="all" checked />
      <span class="text-sm">All notifications</span>
    </label>
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="notification" value="mentions" />
      <span class="text-sm">Mentions only</span>
    </label>
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="notification" value="none" />
      <span class="text-sm">None</span>
    </label>
  </fieldset>
</div>
{% endcall %}

  {% call example("With Description") %}
<div class="cider">
  <fieldset class="space-y-3">
    <legend>Spacing</legend>
    <label class="flex items-start gap-2.5 cursor-pointer">
      <input type="radio" name="spacing" value="default" checked class="mt-0.5" />
      <div>
        <span class="text-sm font-medium">Default</span>
        <p class="text-xs text-muted-foreground">Standard spacing that works for most use cases.</p>
      </div>
    </label>
    <label class="flex items-start gap-2.5 cursor-pointer">
      <input type="radio" name="spacing" value="comfortable" class="mt-0.5" />
      <div>
        <span class="text-sm font-medium">Comfortable</span>
        <p class="text-xs text-muted-foreground">More breathing room between elements.</p>
      </div>
    </label>
    <label class="flex items-start gap-2.5 cursor-pointer">
      <input type="radio" name="spacing" value="compact" class="mt-0.5" />
      <div>
        <span class="text-sm font-medium">Compact</span>
        <p class="text-xs text-muted-foreground">Reduced spacing for dense interfaces.</p>
      </div>
    </label>
  </fieldset>
</div>
{% endcall %}

  {% call example("Card Selection") %}
<div class="cider">
  <fieldset class="grid grid-cols-3 gap-3" style="max-width: 480px;">
    <legend class="col-span-3 mb-1">Choose a plan</legend>
    <label class="flex flex-col items-center gap-2 rounded-xl border p-4 cursor-pointer has-[:checked]:border-primary has-[:checked]:bg-primary/5 transition-colors">
      <input type="radio" name="plan" value="starter" />
      <span class="text-sm font-semibold">Starter</span>
      <span class="text-xs text-muted-foreground">$9/mo</span>
    </label>
    <label class="flex flex-col items-center gap-2 rounded-xl border p-4 cursor-pointer has-[:checked]:border-primary has-[:checked]:bg-primary/5 transition-colors">
      <input type="radio" name="plan" value="pro" checked />
      <span class="text-sm font-semibold">Pro</span>
      <span class="text-xs text-muted-foreground">$29/mo</span>
    </label>
    <label class="flex flex-col items-center gap-2 rounded-xl border p-4 cursor-pointer has-[:checked]:border-primary has-[:checked]:bg-primary/5 transition-colors">
      <input type="radio" name="plan" value="enterprise" />
      <span class="text-sm font-semibold">Enterprise</span>
      <span class="text-xs text-muted-foreground">$99/mo</span>
    </label>
  </fieldset>
</div>
{% endcall %}

  {% call example("Disabled") %}
<div class="cider">
  <fieldset class="space-y-2.5">
    <legend>Status</legend>
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="status" value="active" checked />
      <span class="text-sm">Active</span>
    </label>
    <label class="flex items-center gap-2.5 opacity-50 cursor-not-allowed">
      <input type="radio" name="status" value="pending" disabled />
      <span class="text-sm">Pending (unavailable)</span>
    </label>
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="status" value="archived" />
      <span class="text-sm">Archived</span>
    </label>
  </fieldset>
</div>
{% endcall %}

  {% call example("Form") %}
<div class="cider">
  <form class="space-y-6" onsubmit="return false;">
    <div class="flex flex-col gap-3">
      <label>Notify me aboutâ€¦</label>
      <fieldset class="space-y-2.5">
        <label class="flex items-center gap-2.5 cursor-pointer">
          <input type="radio" name="demo-radio-form" value="all" />
          <span class="text-sm">All new messages</span>
        </label>
        <label class="flex items-center gap-2.5 cursor-pointer">
          <input type="radio" name="demo-radio-form" value="mentions" />
          <span class="text-sm">Direct messages and mentions</span>
        </label>
        <label class="flex items-center gap-2.5 cursor-pointer">
          <input type="radio" name="demo-radio-form" value="none" />
          <span class="text-sm">Nothing</span>
        </label>
      </fieldset>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>
{% endcall %}

{% endblock %}
