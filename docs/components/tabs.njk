{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Tabs" %}

{% block content %}

  {% call example("Underline") %}
<div class="tabs" data-tabs>
  <div class="tabs-list" data-tab-list>
    <button data-tab="tab-1" data-active class="tabs-trigger">Account</button>
    <button data-tab="tab-2" class="tabs-trigger">Password</button>
    <button data-tab="tab-3" class="tabs-trigger">Notifications</button>
  </div>
  <div data-tab-panel="tab-1" data-active class="tabs-content">
    <p class="text-sm text-muted-foreground">Make changes to your account here.</p>
  </div>
  <div data-tab-panel="tab-2" class="tabs-content">
    <p class="text-sm text-muted-foreground">Change your password here.</p>
  </div>
  <div data-tab-panel="tab-3" class="tabs-content">
    <p class="text-sm text-muted-foreground">Configure your notification settings.</p>
  </div>
</div>
{% endcall %}

  {% call example("Pill") %}
<div class="tabs tabs-pill" data-tabs>
  <div class="tabs-list" data-tab-list>
    <button data-tab="pill-1" data-active class="tabs-trigger">Overview</button>
    <button data-tab="pill-2" class="tabs-trigger">Analytics</button>
    <button data-tab="pill-3" class="tabs-trigger">Reports</button>
  </div>
  <div data-tab-panel="pill-1" data-active class="tabs-content">
    <p class="text-sm text-muted-foreground">Overview content here.</p>
  </div>
  <div data-tab-panel="pill-2" class="tabs-content">
    <p class="text-sm text-muted-foreground">Analytics content here.</p>
  </div>
  <div data-tab-panel="pill-3" class="tabs-content">
    <p class="text-sm text-muted-foreground">Reports content here.</p>
  </div>
</div>
{% endcall %}

  {% call example("With Cards") %}
<div class="tabs" data-tabs>
  <div class="tabs-list" data-tab-list>
    <button data-tab="card-account" data-active class="tabs-trigger">Account</button>
    <button data-tab="card-password" class="tabs-trigger">Password</button>
  </div>
  <div data-tab-panel="card-account" data-active class="tabs-content">
    <div class="card p-6">
      <h3 class="text-lg font-semibold">Account</h3>
      <p class="mt-1 text-sm text-muted-foreground">Make changes to your account here. Click save when you're done.</p>
      <form class="mt-4 space-y-4" onsubmit="return false;">
        <div class="field">
          <label>Name</label>
          <input type="text" value="John Doe" />
        </div>
        <div class="field">
          <label>Username</label>
          <input type="text" value="@johndoe" />
        </div>
        <button class="btn-secondary" type="submit">Save changes</button>
      </form>
    </div>
  </div>
  <div data-tab-panel="card-password" class="tabs-content">
    <div class="card p-6">
      <h3 class="text-lg font-semibold">Password</h3>
      <p class="mt-1 text-sm text-muted-foreground">Change your password here. After saving, you'll be logged out.</p>
      <form class="mt-4 space-y-4" onsubmit="return false;">
        <div class="field">
          <label>Current password</label>
          <input type="password" />
        </div>
        <div class="field">
          <label>New password</label>
          <input type="password" />
        </div>
        <div class="field">
          <label>Confirm password</label>
          <input type="password" />
        </div>
        <button class="btn-secondary" type="submit">Save password</button>
      </form>
    </div>
  </div>
</div>
{% endcall %}

  {% call example("Disabled") %}
<div class="tabs" data-tabs>
  <div class="tabs-list" data-tab-list>
    <button data-tab="dis-1" data-active class="tabs-trigger">Home</button>
    <button data-tab="dis-2" class="tabs-trigger" disabled>Disabled</button>
    <button data-tab="dis-3" class="tabs-trigger">Settings</button>
  </div>
  <div data-tab-panel="dis-1" data-active class="tabs-content">
    <p class="text-sm text-muted-foreground">Welcome to the home tab.</p>
  </div>
  <div data-tab-panel="dis-2" class="tabs-content">
    <p class="text-sm text-muted-foreground">This tab is disabled.</p>
  </div>
  <div data-tab-panel="dis-3" class="tabs-content">
    <p class="text-sm text-muted-foreground">Manage your settings here.</p>
  </div>
</div>
{% endcall %}

  {% call example("With Icons") %}
<div class="tabs tabs-pill" data-tabs>
  <div class="tabs-list" data-tab-list>
    <button data-tab="icon-1" data-active class="tabs-trigger">
      <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
      Preview
    </button>
    <button data-tab="icon-2" class="tabs-trigger">
      <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>
      Code
    </button>
  </div>
  <div data-tab-panel="icon-1" data-active class="tabs-content">
    <div class="rounded-xl border p-6">
      <p class="text-sm text-muted-foreground">This is the preview of the component.</p>
    </div>
  </div>
  <div data-tab-panel="icon-2" class="tabs-content">
    <div class="rounded-xl border bg-secondary/30 p-4">
      <code class="text-sm text-muted-foreground">&lt;Button variant="outline"&gt;Click me&lt;/Button&gt;</code>
    </div>
  </div>
</div>
{% endcall %}

  <section class="mt-12">
    <h2 class="text-xl font-bold tracking-tight">Usage</h2>
    <p class="mt-2 text-[15px] text-muted-foreground">Handles tab switching on <code>[data-tabs]</code> containers.</p>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-html">&lt;!-- npm --&gt;
&lt;script src="node_modules/ciderui/js/tabs.js"&gt;&lt;/script&gt;

&lt;!-- CDN --&gt;
&lt;script src="https://unpkg.com/ciderui/js/tabs.js"&gt;&lt;/script&gt;</code></pre>
    </div>
  </section>

{% endblock %}
