{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Tabs" %}
{% set description = "Switchable content panels with a tab bar." %}

{% block content %}

  <h3>Classes</h3>
  <dl>
    <dt><code>.tabs</code></dt>
    <dd>Wrapper for underline-style tab navigation.</dd>
    <dt><code>[data-tab-list]</code></dt>
    <dd>Container for tab buttons.</dd>
    <dt><code>[data-tab]</code></dt>
    <dd>Individual tab button with underline indicator.</dd>
    <dt><code>[data-tab-panel]</code></dt>
    <dd>Content panel toggled by the active tab.</dd>
  </dl>

  {% call example("Default") %}
<div class="tabs" data-tabs>
  <div data-tab-list>
    <button data-tab="tab-1" data-active>Account</button>
    <button data-tab="tab-2">Password</button>
    <button data-tab="tab-3" disabled>Disabled</button>
  </div>
  <div data-tab-panel="tab-1" data-active>
    <p class="text-sm text-muted-foreground">Make changes to your account here.</p>
  </div>
  <div data-tab-panel="tab-2">
    <p class="text-sm text-muted-foreground">Change your password here.</p>
  </div>
  <div data-tab-panel="tab-3">
    <p class="text-sm text-muted-foreground">This tab is disabled.</p>
  </div>
</div>
{% endcall %}

  <section class="mt-12">
    <h2 class="text-xl font-bold tracking-tight">Usage</h2>
    <p class="mt-2 text-[15px] text-muted-foreground">Handles tab switching on <code>[data-tabs]</code> containers. Sets ARIA roles and attributes, and adds keyboard navigation (Arrow keys, Home, End).</p>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-html">&lt;!-- npm --&gt;
&lt;script src="node_modules/ciderui/js/tabs.js"&gt;&lt;/script&gt;

&lt;!-- CDN --&gt;
&lt;script src="https://unpkg.com/ciderui/js/tabs.js"&gt;&lt;/script&gt;</code></pre>
    </div>
  </section>

{% endblock %}
