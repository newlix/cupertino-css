{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Table" %}

{% block content %}

  {% call example("Default") %}
<table>
    <thead>
      <tr>
        <th>Invoice</th>
        <th>Status</th>
        <th>Method</th>
        <th class="text-right">Amount</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="font-medium">INV-001</td>
        <td>Paid</td>
        <td>Credit Card</td>
        <td class="text-right">$250.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-002</td>
        <td>Pending</td>
        <td>PayPal</td>
        <td class="text-right">$150.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-003</td>
        <td>Unpaid</td>
        <td>Bank Transfer</td>
        <td class="text-right">$350.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-004</td>
        <td>Paid</td>
        <td>Credit Card</td>
        <td class="text-right">$450.00</td>
      </tr>
      <tr>
        <td class="font-medium">INV-005</td>
        <td>Paid</td>
        <td>Apple Pay</td>
        <td class="text-right">$550.00</td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3" class="font-medium">Total</td>
        <td class="text-right font-semibold">$1,750.00</td>
      </tr>
    </tfoot>
  </table>
{% endcall %}

  {% call example("With Badges") %}
<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="font-medium">John Doe</td>
        <td class="text-muted-foreground">john@example.com</td>
        <td class="text-muted-foreground">Admin</td>
        <td><span class="tag"><span class="size-1.5 rounded-full bg-green-500"></span>Active</span></td>
      </tr>
      <tr>
        <td class="font-medium">Jane Smith</td>
        <td class="text-muted-foreground">jane@example.com</td>
        <td class="text-muted-foreground">Editor</td>
        <td><span class="tag"><span class="size-1.5 rounded-full bg-green-500"></span>Active</span></td>
      </tr>
      <tr>
        <td class="font-medium">Bob Wilson</td>
        <td class="text-muted-foreground">bob@example.com</td>
        <td class="text-muted-foreground">Viewer</td>
        <td><span class="tag">Inactive</span></td>
      </tr>
    </tbody>
  </table>
{% endcall %}

  {% call example("With Actions") %}
<table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Category</th>
        <th class="text-right">Price</th>
        <th class="text-right">Actions</th>
      </tr>
