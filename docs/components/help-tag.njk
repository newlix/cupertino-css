{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Help Tag" %}

{% block content %}

  {% call example("Positions") %}
<div class="flex flex-wrap items-center gap-6">
  <div class="help-tag">
    <button class="btn-tinted">Top</button>
    <div class="help-tag-content">Top help-tag</div>
  </div>
  <div class="help-tag help-tag-bottom">
    <button class="btn-tinted">Bottom</button>
    <div class="help-tag-content">Bottom help-tag</div>
  </div>
  <div class="help-tag help-tag-right">
    <button class="btn-tinted">Right</button>
    <div class="help-tag-content">Right help-tag</div>
  </div>
  <div class="help-tag help-tag-left">
    <button class="btn-tinted">Left</button>
    <div class="help-tag-content">Left help-tag</div>
  </div>
</div>
{% endcall %}

