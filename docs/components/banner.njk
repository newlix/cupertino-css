{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Banner" %}

{% block content %}

  {% call example("Variants") %}
<div class="banner banner-info">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
  <div><p>Information</p><p>This is an informational banner message.</p></div>
</div>

<div class="banner banner-success">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
  <div><p>Success</p><p>Your changes have been saved successfully.</p></div>
</div>

<div class="banner banner-warning">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
  <div><p>Warning</p><p>Please review your input before continuing.</p></div>
</div>

<div class="banner banner-destructive">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
  <div><p>Error</p><p>Something went wrong. Please try again.</p></div>
</div>
{% endcall %}

  {% call example("Title Only") %}
<div class="banner banner-info">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
  <div><p>You can add components to your app using the CLI.</p></div>
</div>
{% endcall %}

  {% call example("Destructive") %}
<div class="banner banner-destructive">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
  <div><p>Error</p><p>Your session has expired. Please log in again.</p></div>
</div>
{% endcall %}

  {% call example("With Close Button") %}
<div class="banner banner-success" id="demo-banner-close">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
  <div class="flex-1"><p>Payment received</p><p>Your payment of $49.00 has been processed.</p></div>
  <button onclick="this.closest('.banner').style.display='none'" class="ml-auto -mr-1 -mt-1 inline-flex size-7 items-center justify-center rounded-lg text-current opacity-60 transition-opacity hover:opacity-100 cursor-pointer">
    <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
  </button>
</div>
{% endcall %}

  {% call example("With Action") %}
<div class="banner banner-warning">
  <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
  <div class="flex-1">
    <p>Update available</p>
    <p>A new version of Cider UI (v2.4.0) is available.</p>
    <div class="mt-3 flex gap-2">
      <button class="btn-tinted text-xs h-7 px-2.5">Later</button>
      <button class="btn-gray text-xs h-7 px-2.5">Update now</button>
    </div>
  </div>
</div>
{% endcall %}

{% endblock %}
