{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Input" %}
{% set description = "Styled text field for single-line user input." %}

{% block content %}

  <h3>Classes</h3>
  <dl>
    <dt><code>input</code></dt>
    <dd>Auto-styled text input within .cider scope. Includes hover, focus ring, disabled, and error states.</dd>
  </dl>

  {% call example("Default") %}
<input type="text" placeholder="Enter text..." />
{% endcall %}

  {% call example("With Label") %}
<label>Email
  <input type="email" placeholder="you@example.com" />
</label>
<small>We'll never share your email.</small>
{% endcall %}

  {% call example("Required") %}
<label>Email
  <input type="email" placeholder="you@example.com" required />
</label>
{% endcall %}

  <p class="text-muted-foreground">
    A red <code>*</code> is added automatically when the input has <code>required</code>.
  </p>

  {% call example("Optional Hint") %}
<label>Company name <small>(optional)</small>
  <input type="text" placeholder="Acme Inc." />
</label>
{% endcall %}

  {% call example("Error State") %}
<label>Username
  <input type="text" value="ab" aria-invalid="true" />
</label>
<small>Username must be at least 3 characters.</small>
{% endcall %}

  <p class="text-muted-foreground">
    Add <code>aria-invalid="true"</code> to turn the helper text red automatically.
  </p>

  {% call example("With Icon") %}
<div class="relative">
  <svg class="absolute left-3 top-1/2 -translate-y-1/2 size-4 text-muted-foreground pointer-events-none" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
  <input type="text" class="pl-9" placeholder="Search..." />
</div>
{% endcall %}

  {% call example("Disabled") %}
<input type="text" placeholder="Enter text..." disabled />
{% endcall %}

{% endblock %}
