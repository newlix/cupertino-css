{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Label" %}

{% block content %}

  {% call example("With Input") %}
<div class="space-y-1.5">
  <label for="demo-label-email">Your email address</label>
  <input type="email" id="demo-label-email" placeholder="you@example.com">
</div>
{% endcall %}

  {% call example("Text Patterns") %}
<div class="space-y-3">
  <label>Email address</label>
  <label>Email address <span class="text-destructive">*</span></label>
  <label>Company name <span class="text-xs font-normal text-muted-foreground">(optional)</span></label>
</div>
{% endcall %}

  {% call example("With Checkbox") %}
<label class="inline-flex items-center gap-2.5 cursor-pointer">
  <input type="checkbox" />
  <span>Accept terms and conditions</span>
</label>
{% endcall %}

{% endblock %}
