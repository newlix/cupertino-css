{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Field" %}

{% block content %}

  {% call example("Input Field") %}
<div class="field">
  <label>Email</label>
  <input type="email" placeholder="you@example.com">
  <p>We'll never share your email.</p>
</div>
{% endcall %}

  {% call example("Textarea Field") %}
<div class="field">
  <label>Bio</label>
  <textarea placeholder="Tell us about yourself..."></textarea>
  <p>Max 200 characters.</p>
</div>
{% endcall %}

  {% call example("Select Field") %}
<div class="field">
  <label>Country</label>
  <select>
    <option value="" disabled selected>Select a country</option>
    <option value="us">United States</option>
    <option value="uk">United Kingdom</option>
    <option value="tw">Taiwan</option>
  </select>
</div>
{% endcall %}

  {% call example("Error State") %}
<div class="field">
  <label>Username</label>
  <input type="text" value="ab" class="input-error">
  <p class="field-error">Username must be at least 3 characters.</p>
</div>
{% endcall %}

  {% call example("Slider Field") %}
<div class="field">
  <label>Volume</label>
  <input type="range" class="slider" min="0" max="100" value="50">
</div>
{% endcall %}

  {% call example("Checkbox Field") %}
<div class="cider">
<div class="field">
  <label class="inline-flex items-center gap-2.5 cursor-pointer">
    <input type="checkbox">
    <span class="text-sm">I agree to the terms and conditions</span>
  </label>
  <p>You must agree before continuing.</p>
</div>
</div>
{% endcall %}

  {% call example("Radio Group Field") %}
<div class="cider">
<div class="field">
  <label>Plan</label>
  <fieldset class="space-y-2.5">
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="demo-field-plan" value="free" checked />
      <span class="text-sm">Free</span>
    </label>
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="demo-field-plan" value="pro" />
      <span class="text-sm">Pro</span>
    </label>
    <label class="flex items-center gap-2.5 cursor-pointer">
      <input type="radio" name="demo-field-plan" value="enterprise" />
      <span class="text-sm">Enterprise</span>
    </label>
  </fieldset>
  <p>Select the plan that works for you.</p>
</div>
</div>
{% endcall %}

  {% call example("Switch Field") %}
<div class="cider">
<div class="field">
  <div class="flex items-center justify-between">
    <label for="demo-field-switch" class="text-sm font-medium">Airplane Mode</label>
    <input type="checkbox" id="demo-field-switch" role="switch">
  </div>
  <p>Disable all wireless connections.</p>
</div>
</div>
{% endcall %}

{% endblock %}
