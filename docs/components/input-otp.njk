{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Input OTP" %}

{% block content %}

  {% call example("6-Digit") %}
<div class="input-otp" data-name="code">
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
</div>
{% endcall %}

  {% call example("With Separator") %}
<div class="input-otp" data-name="verify">
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-separator"><span>&ndash;</span></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
  <div class="input-otp-slot"></div>
</div>
{% endcall %}

  {% call example("Error State") %}
<div class="input-otp" data-name="error-demo" data-error>
  <div class="input-otp-slot">1</div>
  <div class="input-otp-slot">2</div>
  <div class="input-otp-slot">3</div>
  <div class="input-otp-slot">4</div>
  <div class="input-otp-slot">5</div>
  <div class="input-otp-slot">6</div>
</div>
<p class="mt-2 text-sm" style="color: var(--destructive);">Invalid verification code.</p>
{% endcall %}

  <section class="mt-12">
    <h2 class="text-xl font-bold tracking-tight">Usage</h2>
    <p class="mt-2 text-[15px] text-muted-foreground">Handles auto-advance, backspace, and paste for <code>.input-otp</code> slots.</p>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-html">&lt;!-- npm --&gt;
&lt;script src="node_modules/ciderui/js/otp.js"&gt;&lt;/script&gt;

&lt;!-- CDN --&gt;
&lt;script src="https://unpkg.com/ciderui/js/otp.js"&gt;&lt;/script&gt;</code></pre>
    </div>
  </section>

{% endblock %}
