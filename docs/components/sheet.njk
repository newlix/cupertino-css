{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Sheet" %}

{% block content %}

  {% call example("Default") %}
<button class="btn-gray" onclick="document.getElementById('demo-sheet').showModal()">Open Sheet</button>

<dialog id="demo-sheet" class="sheet">
  <div class="sheet-grabber"></div>
  <button onclick="document.getElementById('demo-sheet').close()" class="sheet-close">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
  </button>
  <header>
    <h2>Move Goal</h2>
    <p>Set your daily move goal.</p>
  </header>
  <section>
    <div class="flex flex-col items-center gap-4 py-4">
      <div class="text-6xl font-bold text-primary">350</div>
      <p class="text-sm text-muted-foreground">calories per day</p>
      <input type="range" class="slider w-full max-w-xs" min="100" max="800" value="350" />
    </div>
  </section>
  <footer>
    <button onclick="document.getElementById('demo-sheet').close()" class="btn-filled w-full">Submit</button>
  </footer>
</dialog>
{% endcall %}

  {% call example("With Form") %}
<button onclick="document.getElementById('demo-sheet-form').showModal()" class="btn-tinted">Create Account</button>

<dialog id="demo-sheet-form" class="sheet">
  <div class="sheet-grabber"></div>
  <button onclick="document.getElementById('demo-sheet-form').close()" class="sheet-close">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
  </button>
  <header>
    <h2>Create Account</h2>
    <p>Fill in the details to create a new account.</p>
  </header>
  <section>
    <form class="space-y-4" onsubmit="return false;">
      <div class="field">
        <label>Full Name</label>
        <input type="text" placeholder="Enter your name" />
      </div>
      <div class="field">
        <label>Email</label>
        <input type="email" placeholder="name@example.com" />
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" placeholder="Create a password" />
      </div>
      <div class="field">
        <label>Role</label>
        <select>
          <option>Member</option>
          <option>Admin</option>
          <option>Viewer</option>
        </select>
      </div>
    </form>
  </section>
  <footer>
    <button onclick="document.getElementById('demo-sheet-form').close()" class="btn-tinted">Cancel</button>
    <button class="btn-filled" onclick="document.getElementById('demo-sheet-form').close()">Create</button>
  </footer>
</dialog>
{% endcall %}

  {% call example("No Close Button") %}
<button onclick="document.getElementById('demo-sheet-noclose').showModal()" class="btn-tinted">Terms & Conditions</button>

<dialog id="demo-sheet-noclose" class="sheet">
  <div class="sheet-grabber"></div>
  <header>
    <h2>Terms of Service</h2>
    <p>Please read and accept the terms to continue.</p>
  </header>
  <section class="flex-1 overflow-auto">
    <div class="text-sm">
      <p>By accessing or using our service, you agree to be bound by these terms. If you disagree with any part of the terms, you may not access the service.</p>
      <p>We reserve the right to modify or replace these Terms at any time. It is your responsibility to check the Terms periodically for changes.</p>
      <p>Your access to and use of the Service is conditioned on your acceptance of and compliance with these Terms. These Terms apply to all visitors, users, and others who access or use the Service.</p>
    </div>
  </section>
  <footer>
    <button onclick="document.getElementById('demo-sheet-noclose').close()" class="btn-tinted">Decline</button>
    <button class="btn-filled" onclick="document.getElementById('demo-sheet-noclose').close()">Accept</button>
  </footer>
</dialog>
{% endcall %}

  <section class="mt-12">
    <h2 class="text-xl font-bold tracking-tight">Usage</h2>
    <p class="mt-2 text-[15px] text-muted-foreground">Bottom sheet using native <code>&lt;dialog&gt;</code>. Adds backdrop click to close with exit animation. Supports a <code>.sheet-grabber</code> drag handle.</p>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-html">&lt;!-- npm --&gt;
&lt;script src="node_modules/ciderui/js/sheet.js"&gt;&lt;/script&gt;

&lt;!-- CDN --&gt;
&lt;script src="https://unpkg.com/ciderui/js/sheet.js"&gt;&lt;/script&gt;</code></pre>
    </div>
  </section>

{% endblock %}
