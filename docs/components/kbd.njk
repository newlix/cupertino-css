{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Kbd" %}
{% set description = "Keyboard key indicator for shortcuts and hotkeys." %}

{% block content %}

  <h3>Classes</h3>
  <dl>
    <dt><code>kbd</code></dt>
    <dd>Auto-styled keyboard shortcut within .cider scope.</dd>
  </dl>

  {% call example("Keys") %}
<div class="cider flex flex-wrap items-center gap-3">
  <kbd>A</kbd>
  <kbd>Enter</kbd>
  <kbd>Shift</kbd>
  <kbd>Tab</kbd>
  <kbd>Esc</kbd>
  <kbd>Space</kbd>
  <kbd>&#8984;</kbd>
  <kbd>&#8997;</kbd>
  <kbd>&#8963;</kbd>
  <kbd>&#x21E7;</kbd>
  <kbd>&#x2190;</kbd>
  <kbd>&#x2191;</kbd>
  <kbd>&#x2192;</kbd>
  <kbd>&#x2193;</kbd>
  <kbd>&#x232B;</kbd>
  <kbd>&#x23CE;</kbd>
</div>
{% endcall %}

  {% call example("Shortcuts") %}
<div class="cider space-y-3">
  <div class="flex items-center gap-2">
    <span class="text-sm text-muted-foreground w-24">Copy</span>
    <kbd>&#8984;</kbd> + <kbd>C</kbd>
  </div>
  <div class="flex items-center gap-2">
    <span class="text-sm text-muted-foreground w-24">Paste</span>
    <kbd>&#8984;</kbd> + <kbd>V</kbd>
  </div>
  <div class="flex items-center gap-2">
    <span class="text-sm text-muted-foreground w-24">Undo</span>
    <kbd>&#8984;</kbd> + <kbd>Z</kbd>
  </div>
  <div class="flex items-center gap-2">
    <span class="text-sm text-muted-foreground w-24">Save</span>
    <kbd>&#8984;</kbd> + <kbd>S</kbd>
  </div>
  <div class="flex items-center gap-2">
    <span class="text-sm text-muted-foreground w-24">Find</span>
    <kbd>&#8984;</kbd> + <kbd>F</kbd>
  </div>
  <div class="flex items-center gap-2">
    <span class="text-sm text-muted-foreground w-24">Select All</span>
    <kbd>&#8984;</kbd> + <kbd>A</kbd>
  </div>
  <div class="flex items-center gap-2">
    <span class="text-sm text-muted-foreground w-24">Screenshot</span>
    <kbd>&#8984;</kbd> + <kbd>&#x21E7;</kbd> + <kbd>4</kbd>
  </div>
</div>
{% endcall %}

  {% call example("Inline") %}
<p class="cider text-sm">Press <kbd>&#8984;</kbd> + <kbd>S</kbd> to save your document. Use <kbd>&#8984;</kbd> + <kbd>&#x21E7;</kbd> + <kbd>P</kbd> to open the command palette.</p>
{% endcall %}

{% endblock %}
