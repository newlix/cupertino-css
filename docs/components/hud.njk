{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "HUD" %}

{% block content %}

  {% call example("HUD") %}
<div class="space-y-3 flex flex-col items-center">
  <div class="hud">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
    <span class="hud-label">Saved</span>
  </div>
  <div class="hud">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5a3.375 3.375 0 00-3.375-3.375H9.75"/></svg>
    <span class="hud-label">Copied</span>
  </div>
  <div class="hud">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/></svg>
    <span class="hud-label">Deleted</span>
  </div>
</div>
{% endcall %}

  {% call example("Notification") %}
<div class="space-y-3 flex flex-col items-center">
  <div class="hud hud-notification">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
    <p class="hud-title">Payment Received</p>
    <p class="hud-message">$49.00 has been added to your account.</p>
  </div>
  <div class="hud hud-destructive hud-notification">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
    <p class="hud-title">Upload Failed</p>
    <p class="hud-message">The file exceeds the 10 MB limit.</p>
  </div>
</div>
{% endcall %}

  {% call example("Programmatic") %}
<div class="flex flex-wrap gap-2">
  <button class="btn-gray" onclick="showHUD('Saved')">Show HUD</button>
  <button class="btn-tinted" onclick="showHUD('Copied')">Copied HUD</button>
  <button class="btn-filled btn-destructive" onclick="showHUD('Error', { message: 'Something went wrong.', type: 'error' })">Error Notification</button>
</div>
{% endcall %}

  <section class="mt-12">
    <h2 class="text-xl font-bold tracking-tight">Usage</h2>
    <p class="mt-2 text-[15px] text-muted-foreground">Call <code>showHUD(label, options?)</code> to show a HUD capsule. Pass a <code>message</code> option to get the richer notification style. Returns <code>{ dismiss(), element }</code>.</p>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-js">// HUD (monochrome pill â€” icon + label)
showHUD("Saved")
showHUD("Copied")

// Notification (title + message)
showHUD("Sent", { message: "Your message has been delivered." })
showHUD("Error", { message: "Something went wrong.", type: "error" })

// Options: { type, message, duration }
// type: "error" shows destructive red icon</code></pre>
    </div>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-html">&lt;!-- npm --&gt;
&lt;script src="node_modules/ciderui/js/hud.js"&gt;&lt;/script&gt;

&lt;!-- CDN --&gt;
&lt;script src="https://unpkg.com/ciderui/js/hud.js"&gt;&lt;/script&gt;</code></pre>
    </div>
  </section>

{% endblock %}
