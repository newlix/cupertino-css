{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Tooltip" %}

{% block content %}

  {% call example("Top (Default)") %}
<div class="tooltip">
  <button class="btn-outline">Hover me</button>
  <div class="tooltip-content">
    Tooltip text
  </div>
</div>
{% endcall %}

  {% call example("Bottom") %}
<div class="tooltip tooltip-bottom">
  <button class="btn-outline">Bottom</button>
  <div class="tooltip-content">
    Bottom tooltip
  </div>
</div>
{% endcall %}

  {% call example("Right") %}
<div class="tooltip tooltip-right">
  <button class="btn-outline">Right</button>
  <div class="tooltip-content">
    Right tooltip
  </div>
</div>
{% endcall %}

  {% call example("Left") %}
<div class="tooltip tooltip-left">
  <button class="btn-outline">Left</button>
  <div class="tooltip-content">
    Left tooltip
  </div>
</div>
{% endcall %}

{% endblock %}
