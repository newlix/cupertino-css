{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Button" %}

{% block content %}
{% call example("Variants") %}
<div class="grid grid-cols-5 gap-3 justify-items-center">
  <button class="btn-primary">Primary</button>
  <button>Default</button>
  <button class="btn-outline">Outline</button>
  <button class="btn-ghost">Ghost</button>
  <button class="btn-destructive">Destructive</button>
  <button class="btn-primary" disabled>Primary</button>
  <button disabled>Default</button>
  <button class="btn-outline" disabled>Outline</button>
  <button class="btn-ghost" disabled>Ghost</button>
  <button class="btn-destructive" disabled>Destructive</button>
</div>
{% endcall %}

{% call example("Sizes") %}
<button class="btn-primary btn-sm">Small</button>
<button class="btn-primary">Default</button>
<button class="btn-primary btn-lg">Large</button>
{% endcall %}

  <p class="text-muted-foreground">
    Use <code>btn-rect</code> for form and sign-in contexts.
  </p>

{% call example("Rounded Rectangle") %}
<button class="btn-primary btn-rect">Continue</button>
<button class="btn-rect">Cancel</button>
<button class="btn-outline btn-rect">GitHub</button>
{% endcall %}

{% call example("") %}
<div class="max-w-xs space-y-3">
  <button class="btn-primary btn-rect w-full">Sign In</button>
  <button class="btn-rect w-full">
    <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
    Sign in with iPhone
  </button>
</div>
{% endcall %}

{% call example("") %}
<div class="flex gap-3">
  <button class="btn-primary btn-rect btn-sm">Save</button>
  <button class="btn-ghost btn-rect btn-sm">Discard</button>
  <button class="btn-destructive btn-rect btn-sm">Delete</button>
</div>
{% endcall %}

  <p class="text-muted-foreground">
    Use <code>btn-ghost</code> with <code>size-9</code> and <code>p-0</code> for icon-only buttons.
  </p>

{% call example("Icon Only") %}
<button class="btn-ghost size-9 p-0">
    <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
  </button>
  <button class="btn-ghost size-9 p-0">
    <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8V5a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v3m18 0-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 8m18 0v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8"/></svg>
  </button>
  <button class="btn-ghost size-9 p-0">
    <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/></svg>
  </button>
{% endcall %}

{% call example("With Icon") %}
<button class="btn-primary">
  <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
  Login with Email
</button>
<button class="btn-outline">
  <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
  GitHub
</button>
{% endcall %}
{% endblock %}
