{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Carousel" %}

{% block content %}

  {% call example("Default") %}
<div class="carousel">
  <div class="carousel-content">
    <div class="carousel-item">
      <div class="rounded-xl border bg-card p-6">
        <h3 class="text-lg font-semibold">Card 1</h3>
        <p class="mt-2 text-sm text-muted-foreground">Swipe or use the navigation buttons to browse through cards.</p>
      </div>
    </div>
    <div class="carousel-item">
      <div class="rounded-xl border bg-card p-6">
        <h3 class="text-lg font-semibold">Card 2</h3>
        <p class="mt-2 text-sm text-muted-foreground">Each card snaps into position with smooth scroll-snap behavior.</p>
      </div>
    </div>
    <div class="carousel-item">
      <div class="rounded-xl border bg-card p-6">
        <h3 class="text-lg font-semibold">Card 3</h3>
        <p class="mt-2 text-sm text-muted-foreground">Built with native CSS scroll-snap for the best performance.</p>
      </div>
    </div>
    <div class="carousel-item">
      <div class="rounded-xl border bg-card p-6">
        <h3 class="text-lg font-semibold">Card 4</h3>
        <p class="mt-2 text-sm text-muted-foreground">Thin circular nav buttons follow Apple design guidelines.</p>
      </div>
    </div>
  </div>
  <button class="carousel-prev" aria-label="Previous">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
  </button>
  <button class="carousel-next" aria-label="Next">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
  </button>
</div>
{% endcall %}

  {% call example("Multi-Column") %}
<div class="carousel">
  <div class="carousel-content">
    <div class="carousel-item-half">
      <div class="aspect-video rounded-xl bg-secondary flex items-center justify-center text-sm text-muted-foreground">Slide 1</div>
    </div>
    <div class="carousel-item-half">
      <div class="aspect-video rounded-xl bg-secondary flex items-center justify-center text-sm text-muted-foreground">Slide 2</div>
    </div>
    <div class="carousel-item-half">
      <div class="aspect-video rounded-xl bg-secondary flex items-center justify-center text-sm text-muted-foreground">Slide 3</div>
    </div>
    <div class="carousel-item-half">
      <div class="aspect-video rounded-xl bg-secondary flex items-center justify-center text-sm text-muted-foreground">Slide 4</div>
    </div>
  </div>
  <button class="carousel-prev" aria-label="Previous">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
  </button>
  <button class="carousel-next" aria-label="Next">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
  </button>
</div>
{% endcall %}

  {% call example("With Indicators") %}
<div class="carousel">
  <div class="carousel-content">
    <div class="carousel-item">
      <div class="rounded-xl border bg-card p-8 text-center">
        <div class="text-4xl">&#127752;</div>
        <h3 class="mt-3 text-lg font-semibold">Beautiful Design</h3>
        <p class="mt-1 text-sm text-muted-foreground">Apple-inspired aesthetic for modern applications.</p>
      </div>
    </div>
    <div class="carousel-item">
      <div class="rounded-xl border bg-card p-8 text-center">
        <div class="text-4xl">&#9889;</div>
        <h3 class="mt-3 text-lg font-semibold">Blazing Fast</h3>
        <p class="mt-1 text-sm text-muted-foreground">CSS-first approach with minimal JavaScript overhead.</p>
      </div>
    </div>
    <div class="carousel-item">
      <div class="rounded-xl border bg-card p-8 text-center">
        <div class="text-4xl">&#127912;</div>
        <h3 class="mt-3 text-lg font-semibold">Customizable</h3>
        <p class="mt-1 text-sm text-muted-foreground">Design tokens and Tailwind CSS make theming effortless.</p>
      </div>
    </div>
  </div>
  <button class="carousel-prev" aria-label="Previous">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
  </button>
  <button class="carousel-next" aria-label="Next">
    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
  </button>
  <div class="carousel-indicators"></div>
</div>
{% endcall %}

  <section class="mt-12">
    <h2 class="text-xl font-bold tracking-tight">Usage</h2>
    <p class="mt-2 text-[15px] text-muted-foreground">Handles prev/next navigation and indicator updates for scroll-snap carousels.</p>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-html">&lt;!-- npm --&gt;
&lt;script src="node_modules/ciderui/js/carousel.js"&gt;&lt;/script&gt;

&lt;!-- CDN --&gt;
&lt;script src="https://unpkg.com/ciderui/js/carousel.js"&gt;&lt;/script&gt;</code></pre>
    </div>
  </section>

{% endblock %}
