{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Popover" %}

{% block content %}

  {% call example("Default") %}
<div class="popover" data-popover>
  <button data-popover-trigger class="btn-outline">Open Popover</button>
  <div class="popover-content">
    <h4 class="text-sm font-semibold">Dimensions</h4>
    <p class="mt-1 text-xs text-muted-foreground">Set the dimensions for the layer.</p>
    <div class="mt-3 space-y-2">
      <div class="field">
        <label>Width</label>
        <input type="text" value="100%" />
      </div>
      <div class="field">
        <label>Height</label>
        <input type="text" value="25px" />
      </div>
    </div>
  </div>
</div>
{% endcall %}

  {% call example("Top") %}
<div style="padding-top: 14rem;">
  <div class="popover popover-top" data-popover>
    <button data-popover-trigger class="btn-outline">Open Top</button>
    <div class="popover-content">
      <h4 class="text-sm font-semibold">Popover on top</h4>
      <p class="mt-1 text-xs text-muted-foreground">This popover appears above the trigger element.</p>
    </div>
  </div>
</div>
{% endcall %}

  {% call example("With Form") %}
<div class="cider">
<div class="popover" data-popover>
  <button data-popover-trigger class="btn-outline">Update Settings</button>
  <div class="popover-content min-w-[280px]">
    <h4 class="text-sm font-semibold">Settings</h4>
    <p class="mt-1 text-xs text-muted-foreground">Configure your display preferences.</p>
    <form class="mt-3 space-y-3" onsubmit="return false;">
      <div class="field">
        <label>Display Name</label>
        <input type="text" value="John Doe" />
      </div>
      <div class="field">
        <label>Theme</label>
        <select>
          <option>System</option>
          <option>Light</option>
          <option>Dark</option>
        </select>
      </div>
      <div class="field">
        <label class="inline-flex items-center gap-2.5 cursor-pointer">
          <input type="checkbox" checked />
          <span class="text-sm">Show notifications</span>
        </label>
      </div>
      <button type="submit" class="w-full">Save</button>
    </form>
  </div>
</div>
</div>
{% endcall %}

  {% call example("User Profile") %}
<div class="popover" data-popover>
  <button data-popover-trigger class="flex size-9 items-center justify-center rounded-full bg-primary text-primary-foreground text-sm font-semibold cursor-pointer">JD</button>
  <div class="popover-content">
    <div class="flex items-center gap-3">
      <div class="flex size-10 items-center justify-center rounded-full bg-primary/10 text-primary text-sm font-semibold">JD</div>
      <div>
        <p class="text-sm font-semibold">John Doe</p>
        <p class="text-xs text-muted-foreground">john@example.com</p>
      </div>
    </div>
    <hr class="my-3" />
    <div class="space-y-1">
      <button class="flex w-full items-center gap-2 rounded-lg px-2 py-1.5 text-sm text-foreground transition-colors hover:bg-accent cursor-pointer">
        <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
        Profile
      </button>
      <button class="flex w-full items-center gap-2 rounded-lg px-2 py-1.5 text-sm text-foreground transition-colors hover:bg-accent cursor-pointer">
        <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        Settings
      </button>
      <hr />
      <button class="flex w-full items-center gap-2 rounded-lg px-2 py-1.5 text-sm transition-colors hover:bg-accent cursor-pointer" style="color: var(--destructive);">
        <svg class="size-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
        Sign Out
      </button>
    </div>
  </div>
</div>
{% endcall %}

  <section class="mt-12">
    <h2 class="text-xl font-bold tracking-tight">Usage</h2>
    <p class="mt-2 text-[15px] text-muted-foreground">Handles open/close, click outside to dismiss, and Escape key for <code class="kbd">[data-popover]</code> elements.</p>
    <div class="snippet mt-4" data-active style="border-radius: var(--radius-lg); overflow: hidden;">
      <pre><code class="language-html">&lt;!-- npm --&gt;
&lt;script src="node_modules/ciderui/js/popover.js"&gt;&lt;/script&gt;

&lt;!-- CDN --&gt;
&lt;script src="https://unpkg.com/ciderui/js/popover.js"&gt;&lt;/script&gt;</code></pre>
    </div>
  </section>

{% endblock %}
