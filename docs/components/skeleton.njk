{% extends "_includes/layout.njk" %}
{% from "_includes/macros.njk" import example %}
{% set title = "Skeleton" %}

{% block content %}

  {% call example("Default") %}
<div class="space-y-4">
  <div class="skeleton h-4 w-3/4"></div>
  <div class="skeleton h-4 w-1/2"></div>
  <div class="skeleton-circle size-10"></div>
</div>
{% endcall %}

  {% call example("Card") %}
<div class="card" style="max-width:380px;">
  <header>
    <div class="skeleton h-4 w-2/3"></div>
    <div class="skeleton h-4 w-1/2"></div>
  </header>
  <section>
    <div class="skeleton w-full" style="height:180px;"></div>
  </section>
  <footer>
    <div class="skeleton h-9 w-20 rounded-lg"></div>
    <div class="skeleton h-9 w-20 rounded-lg"></div>
  </footer>
</div>
{% endcall %}

  {% call example("Table") %}
<div class="space-y-3" style="max-width: 480px;">
  <div class="flex items-center gap-4">
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
  </div>
  <hr>
  <div class="flex items-center gap-4">
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
  </div>
  <div class="flex items-center gap-4">
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
  </div>
  <div class="flex items-center gap-4">
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
    <div class="skeleton h-4 w-1/4"></div>
  </div>
</div>
{% endcall %}

  {% call example("Feed") %}
<div class="space-y-6" style="max-width: 400px;">
  <div class="flex gap-3">
    <div class="skeleton-circle size-10 shrink-0"></div>
    <div class="flex-1 space-y-2">
      <div class="skeleton h-4 w-1/3"></div>
      <div class="skeleton h-4 w-full"></div>
      <div class="skeleton h-4 w-4/5"></div>
    </div>
  </div>
  <div class="flex gap-3">
    <div class="skeleton-circle size-10 shrink-0"></div>
    <div class="flex-1 space-y-2">
      <div class="skeleton h-4 w-2/5"></div>
      <div class="skeleton h-4 w-full"></div>
      <div class="skeleton h-32 w-full rounded-lg"></div>
    </div>
  </div>
</div>
{% endcall %}

{% endblock %}
