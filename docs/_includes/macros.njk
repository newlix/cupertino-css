{#
  example(label, preview) â€” renders a code snippet with optional preview

  Usage:
    {% call example("Variants") %}
    <div class="cider">...</div>
    {% endcall %}

    {% call example("CSS Import", preview=false) %}
    <link rel="stylesheet" href="ciderui.css" />
    {% endcall %}
#}
{% macro example(label="", preview=true) %}
<section class="mt-8">
  {%- if label %}
  <h3 class="mb-3 text-lg font-semibold tracking-tight text-foreground">{{ label }}</h3>
  {%- endif %}
  <div class="snippet">
    {%- if preview %}
    <div class="snippet-preview">
      <figure class="cider">{{ caller() }}</figure>
    </div>
    {%- endif %}
    <header>
      <span>HTML</span>
      <button>Copy</button>
    </header>
    <pre><code class="language-html">{{ caller() | dedent | highlight("html") }}</code></pre>
  </div>
</section>
{% endmacro %}
